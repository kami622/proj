@model SourceCreateVM

<h1 class="h3 mb-3">Update note</h1>

<div class="card">
	<div class="card-body">
		<form method="post">
			<div class="mb-2">
				<div class="row">
					<div class="col-xl-6">
						<label asp-for="Name">Name</label>
						<input asp-for="Name" class="form-control" />
						<span asp-validation-for="Name" class="text-danger"></span>
					</div>
					<div class="col-xl-6">
						<label asp-for="Url">URL</label>
						<input asp-for="Url" class="form-control" />
						<span asp-validation-for="Url" class="text-danger"></span>
					</div>
				</div>
			</div>
			<div class="mt-1">
				<button type="submit" class="btn btn-primary">Update</button> <a class="btn btn-outline-secondary" asp-action="index" asp-controller="subject" asp-route-id="@ViewBag.SubjectId">Cancel</a>
			</div>
		</form>
	</div>
</div>