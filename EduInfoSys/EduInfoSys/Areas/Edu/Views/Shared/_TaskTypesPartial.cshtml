@model List<TaskType>
@{
	int count = 0;
}
<div class="row mb-3">
	<div class="col-6">
		<h1 class="h3">Task types and percentages</h1>
	</div>
	<div class="col-6 d-flex justify-content-end">
		<a asp-action="create" asp-controller="type" asp-route-id="@ViewBag.Id" class="btn btn-primary">Create new</a>
	</div>
</div>
<div class="table-responsive">
	<table class="table">
		<thead>
			<tr>
				<th scope="col">#</th>
				<th scope="col">Name</th>
				<th scope="col">Percentage</th>
				<th scope="col">Actions</th>
			</tr>
		</thead>
		<tbody>
			@foreach (TaskType item in Model)
			{
				count++;
				<tr>
					<th scope="row">@count</th>
					<td>@item.Name</td>
					<td>@(item.Percentage)%</td>
					<td><a asp-action="update" asp-controller="type" asp-route-id="@item.Id" class="btn btn-info">Edit</a> <a asp-action="delete" asp-controller="type" asp-route-id="@item.Id" class="btn btn-danger btn-delete">Delete</a></td>
				</tr>
			}
		</tbody>
	</table>
</div>