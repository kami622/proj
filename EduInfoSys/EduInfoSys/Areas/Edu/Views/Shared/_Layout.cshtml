<body data-theme="@custom.ColorScheme" data-layout="@custom.Layout" data-sidebar-position="@custom.SidebarPosition" data-sidebar-layout="@custom.SidebarLayout">
	<div class="wrapper">
		<nav id="sidebar" class="sidebar js-sidebar">
