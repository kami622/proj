@model UserVM
<h1 class="h3 mb-3">Profile</h1>

<div class="row">
	<div class="col-md-4 col-xl-3">
		<div class="card mb-3">
			<div class="card-header">
				<h5 class="card-title mb-0">Profile</h5>
			</div>
			<div class="card-body text-center">
				<img src="~/assets/img/avatars/@Model.User.PhotoPath" alt="@Model.User.FirstName @Model.User.LastName" class="img-fluid rounded-circle mb-2" width="128" height="128" />
				<h5 class="card-title mb-0">@Model.User.FirstName @Model.User.LastName</h5>
				<div class="text-muted mb-2">@Model.Role</div>

				<div>
					<a class="btn btn-primary btn-sm" href="#">Follow</a>
					<a class="btn btn-primary btn-sm" href="#"><span data-feather="message-square"></span> Message</a>
				</div>
			</div>
			<hr class="my-0" />
			<div class="card-body">
				<h5 class="h6 card-title">Skills</h5>
				<a href="#" class="badge bg-primary me-1 my-1">HTML</a>
				<a href="#" class="badge bg-primary me-1 my-1">JavaScript</a>
				<a href="#" class="badge bg-primary me-1 my-1">Sass</a>
				<a href="#" class="badge bg-primary me-1 my-1">Angular</a>
				<a href="#" class="badge bg-primary me-1 my-1">Vue</a>
				<a href="#" class="badge bg-primary me-1 my-1">React</a>
				<a href="#" class="badge bg-primary me-1 my-1">Redux</a>
				<a href="#" class="badge bg-primary me-1 my-1">UI</a>
				<a href="#" class="badge bg-primary me-1 my-1">UX</a>
			</div>
			<hr class="my-0" />
			<div class="card-body">
				<h5 class="h6 card-title">About</h5>
				<ul class="list-unstyled mb-0">
					<li class="mb-1">
						<span data-feather="home" class="feather-sm me-1"></span> Lives in <a href="#">San Francisco, SA</a>
					</li>

					<li class="mb-1"><span data-feather="briefcase" class="feather-sm me-1"></span> Works at <a href="#">GitHub</a></li>
					<li class="mb-1"><span data-feather="map-pin" class="feather-sm me-1"></span> From <a href="#">Boston</a></li>
				</ul>
			</div>
			<hr class="my-0" />
			<div class="card-body">
				<h5 class="h6 card-title">Elsewhere</h5>
				<ul class="list-unstyled mb-0">
					<li class="mb-1"><span class="fas fa-globe fa-fw me-1"></span> <a href="#">staciehall.co</a></li>
					<li class="mb-1"><span class="fab fa-twitter fa-fw me-1"></span> <a href="#">Twitter</a></li>
					<li class="mb-1"><span class="fab fa-facebook fa-fw me-1"></span> <a href="#">Facebook</a></li>
					<li class="mb-1"><span class="fab fa-instagram fa-fw me-1"></span> <a href="#">Instagram</a></li>
					<li class="mb-1"><span class="fab fa-linkedin fa-fw me-1"></span> <a href="#">LinkedIn</a></li>
				</ul>
			</div>
		</div>
	</div>

	<div class="col-md-8 col-xl-9">
		<div class="card">
			<div class="card-header">

				<h5 class="card-title mb-0">Information</h5>
			</div>
			<div class="card-body h-100">
				<ul class="list-group">
					<li class="list-group-item"><div class="row"><div class="col-6">Identificator</div><div class="col-6">@Model.User.Id</div></div></li>
					<li class="list-group-item"><div class="row"><div class="col-6">Username</div><div class="col-6">@Model.User.UserName</div></div></li>
					<li class="list-group-item"><div class="row"><div class="col-6">Role</div><div class="col-6">@Model.Role</div></div></li>
					<li class="list-group-item"><div class="row"><div class="col-6">First name</div><div class="col-6">@Model.User.FirstName</div></div></li>
					<li class="list-group-item"><div class="row"><div class="col-6">Last name</div><div class="col-6">@Model.User.LastName</div></div></li>
					<li class="list-group-item"><div class="row"><div class="col-6">Gender</div><div class="col-6">@(Model.User.IsFemale? "Female" : "Male")</div></div></li>
					<li class="list-group-item"><div class="row"><div class="col-6">Birth date</div><div class="col-6">@Model.User.BirthDate.ToString("MMMM dd, yyyy")</div></div></li>
					<li class="list-group-item"><div class="row"><div class="col-6">Email address</div><div class="col-6">@(Model.User.Email is null ? "No email address" : Model.User.Email)</div></div></li>
					<li class="list-group-item"><div class="row"><div class="col-6">Phone number</div><div class="col-6">@(Model.User.PhoneNumber is null ? "No phone number" : Model.User.PhoneNumber)</div></div></li>
				</ul>
			</div>
		</div>
	</div>
</div>