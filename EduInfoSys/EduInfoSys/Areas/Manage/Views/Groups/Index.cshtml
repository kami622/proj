@model List<Group>
@{
	int count = 0;
}
<div class="row mb-3">
	<div class="col-6">
		<h1 class="h3">Groups</h1>
	</div>
	<div class="col-6 d-flex justify-content-end">
		<a asp-action="create" class="btn btn-primary text-center"><i class="align-middle me-1" data-feather="plus-circle"></i>Create new</a>
	</div>
</div>

<div class="card">
	<div class="card-body">
		<table id="datatables-reponsive" class="table table-striped" style="width:100%">
			<thead>
				<tr>
					<th scope="col">#</th>
					<th scope="col">Group name</th>
					<th scope="col">Department name</th>
					<th scope="col">Actions</th>
				</tr>
			</thead>
			<tbody>
				@foreach (Group item in Model)
				{
					count++;
					<tr>
						<th scope="row">@count</th>
						<td>@item.Name</td>
						<td>@item.Department.Name</td>
						<td><a asp-action="update" asp-route-id="@item.Id" class="btn btn-primary"><i class="align-middle" data-feather="edit-2"></i></a> <a asp-action="delete" asp-route-id="@item.Id" class="btn btn-danger btn-delete"><i class="align-middle" data-feather="trash-2"></i></a></td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>